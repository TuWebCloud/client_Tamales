---
import PhoneIcon from "../components/icons/PhoneIcon.astro";
import WhatsappIcon from "../components/icons/WhatsappIcon.astro";
---

<footer class="relative flex flex-col w-full items-center pb-8 lg:mx-[20%] lg:w-[60%]">
    <div class="flex flex-col sm:flex-row gap-8 py-14 text-2xl">
        <a href="#" target="_blank" class="flex flex-row gap-2 items-center border-1 rounded-xl py-2 px-4
            hover:scale-110 hover:cursor-pointer transition-transform">
            <PhoneIcon />
            Llámanos
        </a>
        <a href="#" target="_blank" class="flex flex-row gap-2 items-center border-1 rounded-xl py-2 px-4
            hover:scale-110 hover:cursor-pointer transition-transform">
            <WhatsappIcon />
            Escríbenos
        </a>
    </div>
    <p>Holguín, Holguín, Cuba</p>
    <p class="text-center mt-3">2025 &copy; Creado por <strong>TuWeb</strong><br/>Todos los derechos reservados.</p>
</footer>

<style>
    footer::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 1px;
        border-radius: 50%;
        background: var(--border);
    }
</style>
