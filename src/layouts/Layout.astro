---
import '../styles/global.css'
import '@fontsource-variable/plus-jakarta-sans'; // Supports weights 200-800

const {title} = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<meta name="description" content="venta de tamales en holguin, comida cubana, venta de tamales en holguin, 
		tamales por cantidad, tamales a domicilio, comida tradicional cubana, comida casera, tamales rellenos">
		<link rel="icon" href="/tamal-icon.webp" />
	</head>
	<body>
		<div class="fixed top-0 z-[-50] h-screen w-full bg-[rgb(255, 250, 230)]
		bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(236,217,25,0.5),rgba(255,255,255,0))]"></div>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Plus Jakarta Sans Variable', sans-serif;
		color: #151515;
	}
</style>
