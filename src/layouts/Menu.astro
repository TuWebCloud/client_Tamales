---
import { getCollection } from "astro:content";
import PlatoCard from "../components/PlatoCard.astro";

const platos = await getCollection("platos")
---

<section class="max-w-[660px] mx-auto mt-30">
    <h2 class="relative text-5xl font-bold text-center py-5 text-shadow-green shadow-xl rounded-xl">
        Men√∫
    </h2>
    <section class="flex flex-wrap justify-around">
        {
            platos.map(async (plato) => {
                const { data } = plato

                return(
                    <PlatoCard plato={data} />
                )
            })
        }
    </section>
</section>

<style>
    h2::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 1px;
        width: 100%;
        border-radius: 50%;
        background: var(--border);
    }
    h2::after {
        content: '';
        position: absolute;
        left: 0;
        top: 100%;
        height: 1px;
        width: 100%;
        border-radius: 50%;
        background: var(--border);
    }
</style>