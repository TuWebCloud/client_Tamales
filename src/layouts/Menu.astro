---
import { getCollection } from "astro:content";
import PlatoCard from "../components/PlatoCard.astro";

const platos = await getCollection("platos")
---

<section class="max-w-[660px] mx-auto mt-30">
    <h2 class="relative text-5xl font-bold text-center py-5 text-shadow-green rounded-xl">
        Men√∫
    </h2>
    <section class="flex flex-wrap justify-around">
        {
            platos.map(async (plato) => {
                const { data } = plato

                return(
                    <PlatoCard plato={data} />
                )
            })
        }
    </section>
</section>

<style>
    h2::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 100%;
        background-color: rgb(255, 252, 233);
        border-radius: 12px;
        z-index: -5;
    }
    h2::after {
        content: '';
        position: absolute;
        left: 5%;
        top: -1px;
        height: calc(100% + 2px);
        width: 90%;
        background: var(--border);
        box-shadow: 0 10px 30px #15151511;
        z-index: -10;
    }
</style>